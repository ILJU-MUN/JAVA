class Employee{
	static int 학교;
	String name;
	int age;
	void gotWork() {
		System.out.println(name + ", " + age  
			+ "세 인 사람이 일을한다" );
	}
}

public class Test2 {
	public static void main(String[] args) {
		// value-type(값 타입) vs reference-type(참조 타입)
		// JVM
		// stack, heap
		
		int a = 1;
		int b = a;
		
		Employee emp = new Employee();
		emp.age = 11;
		emp.name = "문일주";
		emp.gotWork();
		Employee.F = 22;
		System.out.println(Employee.F);
	}
}
