class Student2{
	String name; //클래스 내에서는 위치 상관x
	public void setName(String nm) {
		name = nm;
	}
	public String getName() {
		return name;
	}
	public void gotoSchool() {
		System.out.println(name + "이(가) 학교에 간다.");
	}
}
public class Test3 {

	public static void main(String[] args) {
		//1.
		Student2 std2 = new Student2();
		std2.name = "문일주";
		std2.gotoSchool();
		//2.
		Student2 std2;
		std2 = new Student2();
	}

}
